---
pagination:
    data: collections
    size: 1
    alias: tag
    filter:
        - all
        - articles
        - tagList
    addAllPagesToCollections: true
renderData:
    title: Статьи с тегом «{{ tag }}»
layout: page.njk
permalink: /articles/tags/{{ tag | slug }}/
---

{% include 'header.njk' %}

<main class="main">
    <h1 class="tags__header">Теги</h1>
    <ul class="tags__list">
        {% for tags in collections.tagList | filterArticleTag %}
            <li class="tags__item">
                <a class="
                    tags__tag-link
                    {% if tag == tags %}
                        tags__tag-link--active
                    {% endif %}"
                    {% if tag != tags %}
                        href="/articles/tags/{{ tags | slug }}"
                    {% endif %}>
                    {{ tags }}
                </a>
            </li>
        {% endfor %}
    </ul>

    {% set taglist = collections[tag] %}
    <h1>Статьи с тегом «{{ tag }}» ({{ taglist | length }})</h1>
    <ol>
        {% for article in taglist | filterArticles | reverse %}
            <li>
                <a href="{{ article.url | url }}">{{ article.data.title }}</a>
            </li>
        {% endfor %}
    </ol>
    <p>
        <a href="/articles/tags/">Все теги</a>
    </p>
</main>

{% include 'aside.njk' %}
{% include 'footer.njk' %}
