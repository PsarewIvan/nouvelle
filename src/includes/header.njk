            {%- endfor -%}
        </li>
        <li class="informer__item informer__item--calendar">
            {%- for conference in collections.conference -%}
                <a class="informer__link" href={{ conference.data.url }}>
                    <strong class="informer__meta informer__meta--calendar">
                        <time datetime="{{ conference.data.date | isoDate }}">
                            {{ conference.data.date | shortDate }}
                        </time>
                    </strong>
                <p class="informer__text">
                    {{ conference.data.title }}
                </p>
                <svg class="informer__icon informer__icon--calendar" viewBox="0 0 38 29" width="32" height="23">
